// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para el Login y gesti칩n de usuarios del sistema
model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  nombre    String?
  rol       String   @default("USER") // ADMIN, USER, OPERADOR
  activo    Boolean  @default(true)
  
  // Fechas de control
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("usuarios")
}

// Modelo para las Lavadoras (Gesti칩n de m치quinas)
model Lavadora {
  id        Int      @id @default(autoincrement())
  sucursal  String
  isEnable  Boolean  @default(true) @map("is_enable")
  
  // Relaciones
  registros RegistroLavadora[]

  // Fechas de control
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("lavadoras")
}

// Modelo para el historial/uso de las lavadoras
model RegistroLavadora {
  id          Int      @id @default(autoincrement())
  lavadoraId  Int      @map("id_lavadora")
  tipoLavado  String   @map("tipo_lavado")
  
  // Relaci칩n con Lavadora
  lavadora    Lavadora @relation(fields: [lavadoraId], references: [id])

  // Fechas de control
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("registro_lavadoras")
}
