model Branch {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  address     String?
  phone       String?
  
  // Machines in this branch
  washers     Washer[]
  dryers      Dryer[]
  
  // Assigned users
  users       UserBranch[]

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at")

  @@map("branches")
}
